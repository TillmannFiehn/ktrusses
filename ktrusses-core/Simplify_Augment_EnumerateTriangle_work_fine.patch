+    Path inputPath = getInputPath();
+    Path outputPath = getOutputPath();
+
+    Job simplify = prepareJob(inputPath, outputPath, TextInputFormat.class,
+        SimplifyGraphMapper.class, Membership.class, RepresentativeEdge.class,
